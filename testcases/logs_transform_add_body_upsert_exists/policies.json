{
  "policies": [
    {
      "id": "add-body-upsert-exists",
      "name": "Add body with upsert when body already exists (overwrite)",
      "log": {
        "match": [{ "log_field": "severity_text", "exact": "INFO" }],
        "keep": "all",
        "transform": {
          "add": [{ "log_field": "body", "value": "replaced body", "upsert": true }]
        }
      }
    }
  ]
}
