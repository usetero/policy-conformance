{
  "policies": [
    {
      "id": "keep-error-spans",
      "name": "Keep all error spans (100% sampling)",
      "trace": {
        "match": [
          { "span_status": "SPAN_STATUS_CODE_ERROR", "exists": true }
        ],
        "keep": {
          "percentage": 100.0
        }
      }
    },
    {
      "id": "drop-health-checks",
      "name": "Drop health check spans (0% sampling)",
      "trace": {
        "match": [
          { "trace_field": "TRACE_FIELD_NAME", "exact": "GET /health" }
        ],
        "keep": {
          "percentage": 0.0
        }
      }
    }
  ]
}
