{
  "policies": [
    {
      "id": "add-env-no-upsert",
      "name": "Add env=production without upsert (no-op when exists)",
      "log": {
        "match": [
          { "log_field": "body", "regex": "^.*$" }
        ],
        "keep": "all",
        "transform": {
          "add": [
            { "log_attribute": "env", "value": "production", "upsert": false }
          ]
        }
      }
    }
  ]
}
