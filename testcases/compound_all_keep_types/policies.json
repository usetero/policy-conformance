{
  "policies": [
    {
      "id": "keep-all-web",
      "name": "Keep all web-service logs",
      "log": {
        "match": [
          { "resource_attribute": "service.name", "exact": "web-service" }
        ],
        "keep": "all"
      }
    },
    {
      "id": "drop-none-debug",
      "name": "Drop all DEBUG logs",
      "log": {
        "match": [
          { "log_field": "severity_text", "exact": "DEBUG" }
        ],
        "keep": "none"
      }
    },
    {
      "id": "sample-50-info",
      "name": "Sample 50% of INFO logs",
      "log": {
        "match": [
          { "log_field": "severity_text", "exact": "INFO" }
        ],
        "keep": "50%"
      }
    },
    {
      "id": "rate-2ps-warn",
      "name": "Rate limit WARN logs to 2/s",
      "log": {
        "match": [
          { "log_field": "severity_text", "exact": "WARN" }
        ],
        "keep": "2/s"
      }
    },
    {
      "id": "rate-1pm-error",
      "name": "Rate limit ERROR logs to 1/m",
      "log": {
        "match": [
          { "log_field": "severity_text", "exact": "ERROR" }
        ],
        "keep": "1/m"
      }
    },
    {
      "id": "keep-all-errors",
      "name": "Keep all ERROR logs",
      "log": {
        "match": [
          { "log_field": "severity_text", "exact": "ERROR" }
        ],
        "keep": "all"
      }
    }
  ]
}
