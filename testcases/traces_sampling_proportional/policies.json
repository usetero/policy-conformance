{
  "policies": [
    {
      "id": "proportional-50pct",
      "name": "Proportional sampling at 50%",
      "trace": {
        "match": [
          { "resource_attribute": "service.name", "exact": "api-server" }
        ],
        "keep": {
          "percentage": 50.0,
          "mode": "SAMPLING_MODE_PROPORTIONAL"
        }
      }
    }
  ]
}
